---
interface Props {
  posts: any[]
}

const { posts } = Astro.props
const carouselPosts = posts.slice(0, 5) // Max 5 posts
---

<div class="news-carousel relative rounded-3xl overflow-hidden bg-white border border-border shadow-lg" id="newsCarousel">
  <!-- Carousel Items -->
  <div class="carousel-wrapper relative">
    {carouselPosts.map((post, index) => (
      <div 
        class={`carousel-item absolute inset-0 transition-opacity duration-700 ${index === 0 ? 'opacity-100 z-10' : 'opacity-0 z-0'}`}
        data-index={index}
      >
        <!-- Background Image -->
        <div class="absolute inset-0">
          <img
            src={post.data.heroImage || '/images/hero-home.png'}
            alt={post.data.title}
            class="w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/80"></div>
        </div>

        <!-- Content -->
        <div class="relative z-10 flex flex-col justify-end h-full p-6 md:p-12 lg:p-16">
          <div class="max-w-4xl">
            <!-- Category Badge -->
            {post.data.category && (
              <span class="inline-block bg-quimbara-magenta text-white px-4 py-1 rounded-full text-xs font-bold uppercase tracking-wider mb-4">
                {post.data.category}
              </span>
            )}

            <!-- Title -->
            <h2 class="text-3xl md:text-5xl lg:text-6xl font-heading font-bold text-white mb-4 leading-tight">
              {post.data.title}
            </h2>

            <!-- Excerpt -->
            {post.data.description && (
              <p class="text-base md:text-lg text-white/90 mb-6 max-w-2xl line-clamp-2">
                {post.data.description}
              </p>
            )}

            <!-- CTA -->
            <a
              href={`/blog/${post.id}`}
              class="inline-flex items-center gap-2 bg-quimbara-magenta text-white px-6 py-3 rounded-xl font-bold hover:bg-quimbara-pink transition-all hover:scale-105 shadow-lg"
            >
              Leer artículo
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- Navigation Arrows -->
  {carouselPosts.length > 1 && (
    <>
      <button
        id="prevBtn"
        aria-label="Artículo anterior"
        class="absolute left-4 top-1/2 -translate-y-1/2 z-20 bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white p-3 rounded-full transition-all hover:scale-110"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
      
      <button
        id="nextBtn"
        aria-label="Siguiente artículo"
        class="absolute right-4 top-1/2 -translate-y-1/2 z-20 bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white p-3 rounded-full transition-all hover:scale-110"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </>
  )}

  <!-- Dots Indicators -->
  {carouselPosts.length > 1 && (
    <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-20 flex gap-2">
      {carouselPosts.map((_, index) => (
        <button
          class={`carousel-dot w-3 h-3 rounded-full transition-all ${index === 0 ? 'bg-white w-8' : 'bg-white/50 hover:bg-white/75'}`}
          data-index={index}
          aria-label={`Ir a artículo ${index + 1}`}
        ></button>
      ))}
    </div>
  )}
</div>

<style>
  .news-carousel {
    min-height: 70vh;
  }

  .carousel-wrapper {
    height: 70vh;
    position: relative;
  }

  .carousel-item {
    height: 100%;
  }

  @media (max-width: 768px) {
    .news-carousel,
    .carousel-wrapper {
      min-height: 60vh;
      height: 60vh;
    }
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  const carousel = document.getElementById('newsCarousel');
  if (carousel) {
    const items = carousel.querySelectorAll('.carousel-item');
    const dots = carousel.querySelectorAll('.carousel-dot');
    const prevBtn = carousel.querySelector('#prevBtn');
    const nextBtn = carousel.querySelector('#nextBtn');
    
    let currentIndex = 0;
    let autoPlayInterval: NodeJS.Timeout;
    let isPaused = false;

    function showSlide(index: number) {
      // Hide all items
      items.forEach((item, i) => {
        if (i === index) {
          item.classList.remove('opacity-0', 'z-0');
          item.classList.add('opacity-100', 'z-10');
        } else {
          item.classList.remove('opacity-100', 'z-10');
          item.classList.add('opacity-0', 'z-0');
        }
      });

      // Update dots
      dots.forEach((dot, i) => {
        if (i === index) {
          dot.classList.remove('bg-white/50', 'w-3');
          dot.classList.add('bg-white', 'w-8');
        } else {
          dot.classList.remove('bg-white', 'w-8');
          dot.classList.add('bg-white/50', 'w-3');
        }
      });

      currentIndex = index;
    }

    function nextSlide() {
      const nextIndex = (currentIndex + 1) % items.length;
      showSlide(nextIndex);
    }

    function prevSlide() {
      const prevIndex = (currentIndex - 1 + items.length) % items.length;
      showSlide(prevIndex);
    }

    function startAutoPlay() {
      if (isPaused || items.length <= 1) return;
      autoPlayInterval = setInterval(nextSlide, 5000);
    }

    function stopAutoPlay() {
      clearInterval(autoPlayInterval);
    }

    // Event listeners
    if (prevBtn) {
      prevBtn.addEventListener('click', () => {
        prevSlide();
        stopAutoPlay();
        setTimeout(startAutoPlay, 10000); // Resume after 10s
      });
    }

    if (nextBtn) {
      nextBtn.addEventListener('click', () => {
        nextSlide();
        stopAutoPlay();
        setTimeout(startAutoPlay, 10000);
      });
    }

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        showSlide(index);
        stopAutoPlay();
        setTimeout(startAutoPlay, 10000);
      });
    });

    // Pause on hover
    carousel.addEventListener('mouseenter', () => {
      isPaused = true;
      stopAutoPlay();
    });

    carousel.addEventListener('mouseleave', () => {
      isPaused = false;
      startAutoPlay();
    });

    // Start autoplay
    if (items.length > 1) {
      startAutoPlay();
    }
  }
</script>
