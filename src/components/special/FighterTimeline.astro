---
interface Props {
  fighterId: number;
  historicalEvents: {
    year: string;
    title: string;
    description: string;
    type: 'championship' | 'suspension' | 'fight' | 'return';
  }[];
}

interface Fight {
  status: { short: string };
  fighters: {
    first: { id: number; winner: boolean; name: string };
    second: { id: number; winner: boolean; name: string };
  };
  date: string;
  slug: string;
}

interface FighterProfile {
  name: string;
  nickname: string;
  photo: string;
  height: string;
  weight: string;
  reach: string;
  stance: string;
}

interface FighterRecords {
  total: { win: number; loss: number; draw: number };
  ko: { win: number; loss: number };
  sub: { win: number; loss: number };
  dec?: { win: number; loss: number };
}

const { fighterId, historicalEvents } = Astro.props;

// Read from Content Collection (Astro handles bundling)
import { getEntry } from 'astro:content';

let fighter: FighterProfile | null = null;
let records: FighterRecords | null = null;
let recentFights: Fight[] = [];

try {
  const entry = await getEntry('fighterData', fighterId.toString());
  
  if (entry) {
    const cacheData = entry.data;
    fighter = cacheData.profile as FighterProfile;
    records = cacheData.records as FighterRecords;
    recentFights = (cacheData.fights || []) as Fight[];
    
    // Calculate decision wins/losses (total - ko - sub)
    if (records) {
      const decWins = records.total.win - (records.ko?.win || 0) - (records.sub?.win || 0);
      const decLoss = records.total.loss - (records.ko?.loss || 0) - (records.sub?.loss || 0);
      records.dec = { win: decWins, loss: decLoss };
    }
  } else {
    console.warn(`⚠️  Cache entry not found for fighter ${fighterId}`);
  }
} catch (e) {
  console.error(`Error reading fighter data: ${e}`);
}


// Process Recent Fights into Timeline Events
const recentEvents = recentFights
    .filter((f: Fight) => f.status.short === 'FT') // Only finished fights
    .map((f: Fight) => {
        const isWinner = (f.fighters.first.id === fighterId && f.fighters.first.winner) || 
                         (f.fighters.second.id === fighterId && f.fighters.second.winner);
        const opponent = f.fighters.first.id === fighterId ? f.fighters.second.name : f.fighters.first.name;
        
        return {
            year: new Date(f.date).getFullYear().toString(),
            title: isWinner ? `Victoria vs ${opponent}` : `Derrota vs ${opponent}`,
            description: `${f.slug}. ${isWinner ? 'Ganó' : 'Perdió'} el combate.`,
            type: 'fight' as const
        };
    });

// Combine and Sort
const allEvents = [...historicalEvents, ...recentEvents].sort((a, b) => parseInt(b.year) - parseInt(a.year));

---

<div class="fighter-profile bg-white rounded-xl shadow-lg overflow-hidden my-8">
    {fighter ? (
        <div class="profile-header bg-[#43334C] text-[#E83C91] p-8 flex flex-col md:flex-row items-center gap-8">
            <div class="w-48 h-48 rounded-full overflow-hidden border-4 border-[#43334C] shadow-xl shrink-0 bg-[#43334C]">
                <img src={fighter.photo} alt={fighter.name} class="w-full h-full object-cover" />
            </div>
            <div class="text-center md:text-left">
                <h2 class="text-4xl font-bold mb-2">{fighter.name}</h2>
                <p class="text-xl text-[#43334C] font-semibold mb-4">"{fighter.nickname}"</p>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
                    <div class="bg-[#43334C] p-3 rounded-lg">
                        <span class="block text-[#43334C] text-xs uppercase">Altura</span>
                        <span class="font-bold">{fighter.height}</span>
                    </div>
                    <div class="bg-[#43334C] p-3 rounded-lg">
                        <span class="block text-[#43334C] text-xs uppercase">Peso</span>
                        <span class="font-bold">{fighter.weight}</span>
                    </div>
                    <div class="bg-[#43334C] p-3 rounded-lg">
                        <span class="block text-[#43334C] text-xs uppercase">Alcance</span>
                        <span class="font-bold">{fighter.reach}</span>
                    </div>
                    <div class="bg-[#43334C] p-3 rounded-lg">
                        <span class="block text-[#43334C] text-xs uppercase">Guardia</span>
                        <span class="font-bold">{fighter.stance}</span>
                    </div>
                </div>
            </div>
        </div>
    ) : (
        <div class="p-8 text-center text-[#E83C91]">No se pudo cargar el perfil del luchador.</div>
    )}

    {/* Detailed Fight Record Section */}
    {records && (
        <div class="record-stats bg-gradient-to-r from-slate-800 to-slate-900 text-[#E83C91] p-8">
            <h3 class="text-2xl font-bold mb-6 text-center">Récord Profesional</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
                {/* Total Record */}
                <div class="bg-[#43334C]/5/50 p-6 rounded-lg text-center border-2 border-green-500">
                    <div class="text-5xl font-black mb-2 text-green-400">
                        {records.total.win}-{records.total.loss}
                    </div>
                    <div class="text-sm text-[#43334C] uppercase tracking-wider">Récord Total</div>
                </div>

                {/* Wins Breakdown */}
                <div class="bg-[#43334C]/5/50 p-6 rounded-lg">
                    <div class="text-xl font-bold mb-4 text-green-400 text-center">Victorias ({records.total.win})</div>
                    <div class="space-y-2 text-sm">
                        <div class="flex justify-between">
                            <span class="text-[#43334C]">Por KO/TKO:</span>
                            <span class="font-bold text-[#E83C91]">{records.ko.win}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-[#43334C]">Por Decisión:</span>
                            <span class="font-bold text-[#E83C91]">{records.dec?.win || 0}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-[#43334C]">Por Sumisión:</span>
                            <span class="font-bold text-[#E83C91]">{records.sub.win}</span>
                        </div>
                    </div>
                </div>

                {/* Losses Breakdown */}
                <div class="bg-[#43334C]/5/50 p-6 rounded-lg">
                    <div class="text-xl font-bold mb-4 text-[#E83C91] text-center">Derrotas ({records.total.loss})</div>
                    <div class="space-y-2 text-sm">
                        <div class="flex justify-between">
                            <span class="text-[#43334C]">Por KO/TKO:</span>
                            <span class="font-bold text-[#E83C91]">{records.ko.loss}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-[#43334C]">Por Decisión:</span>
                            <span class="font-bold text-[#E83C91]">{records.dec?.loss || 0}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-[#43334C]">Por Sumisión:</span>
                            <span class="font-bold text-[#E83C91]">{records.sub.loss}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    )}


    <div class="timeline-container p-8 bg-[#F8F4EC]">
        <h3 class="text-2xl font-bold mb-8 text-center text-[#43334C]">Línea de Tiempo Profesional</h3>
        <div class="relative border-l-4 border-[#43334C] ml-4 md:ml-auto md:mr-auto md:w-2/3 space-y-8">
            {allEvents.map((event) => (
                <div class="mb-8 ml-6 relative">
                    <div class={`absolute -left-10 w-6 h-6 rounded-full border-4 border-white shadow-sm ${
                        event.type === 'championship' ? 'bg-[#E83C91]' :
                        event.type === 'suspension' ? 'bg-[#E83C91]' :
                        event.type === 'return' ? 'bg-green-500' :
                        'bg-[#43334C]/10'
                    }`}></div>
                    <div class="bg-white p-6 rounded-lg shadow-sm border border-[#43334C]/20 hover:shadow-md transition-shadow">
                        <span class="text-sm font-bold text-[#43334C] mb-1 block">{event.year}</span>
                        <h4 class="text-lg font-bold text-[#43334C] 900 mb-2">{event.title}</h4>
                        <p class="text-[#43334C] 600">{event.description}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</div>
