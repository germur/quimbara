---
import { Image } from 'astro:assets';

interface Props {
  fighterId: number;
  historicalEvents: {
    year: string;
    title: string;
    description: string;
    type: 'championship' | 'suspension' | 'fight' | 'return';
  }[];
}

const { fighterId, historicalEvents } = Astro.props;

// Read from cache instead of API
import fs from 'fs';
import path from 'path';

const cacheFile = path.join(process.cwd(), 'src/data/fighter-cache', `${fighterId}.json`);

let fighter = null;
let records = null;
let recentFights = [];

if (fs.existsSync(cacheFile)) {
  const cacheData = JSON.parse(fs.readFileSync(cacheFile, 'utf-8'));
  fighter = cacheData.profile;
  records = cacheData.records;
  recentFights = cacheData.fights || [];
  
  // Calculate decision wins/losses (total - ko - sub)
  if (records) {
    const decWins = records.total.win - (records.ko?.win || 0) - (records.sub?.win || 0);
    const decLoss = records.total.loss - (records.ko?.loss || 0) - (records.sub?.loss || 0);
    records.dec = { win: decWins, loss: decLoss };
  }
} else {
  console.warn(`⚠️  Cache file not found for fighter ${fighterId}`);
}


// Process Recent Fights into Timeline Events
const recentEvents = recentFights
    .filter(f => f.status.short === 'FT') // Only finished fights
    .map(f => {
        const isWinner = (f.fighters.first.id === fighterId && f.fighters.first.winner) || 
                         (f.fighters.second.id === fighterId && f.fighters.second.winner);
        const opponent = f.fighters.first.id === fighterId ? f.fighters.second.name : f.fighters.first.name;
        
        return {
            year: new Date(f.date).getFullYear().toString(),
            title: isWinner ? `Victoria vs ${opponent}` : `Derrota vs ${opponent}`,
            description: `${f.slug}. ${isWinner ? 'Ganó' : 'Perdió'} el combate.`,
            type: 'fight'
        };
    });

// Combine and Sort
const allEvents = [...historicalEvents, ...recentEvents].sort((a, b) => parseInt(b.year) - parseInt(a.year));

---

<div class="fighter-profile bg-white rounded-xl shadow-lg overflow-hidden my-8">
    {fighter ? (
        <div class="profile-header bg-slate-900 text-white p-8 flex flex-col md:flex-row items-center gap-8">
            <div class="w-48 h-48 rounded-full overflow-hidden border-4 border-blue-500 shadow-xl shrink-0 bg-slate-800">
                <img src={fighter.photo} alt={fighter.name} class="w-full h-full object-cover" />
            </div>
            <div class="text-center md:text-left">
                <h2 class="text-4xl font-bold mb-2">{fighter.name}</h2>
                <p class="text-xl text-blue-400 font-semibold mb-4">"{fighter.nickname}"</p>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
                    <div class="bg-slate-800 p-3 rounded-lg">
                        <span class="block text-slate-400 text-xs uppercase">Altura</span>
                        <span class="font-bold">{fighter.height}</span>
                    </div>
                    <div class="bg-slate-800 p-3 rounded-lg">
                        <span class="block text-slate-400 text-xs uppercase">Peso</span>
                        <span class="font-bold">{fighter.weight}</span>
                    </div>
                    <div class="bg-slate-800 p-3 rounded-lg">
                        <span class="block text-slate-400 text-xs uppercase">Alcance</span>
                        <span class="font-bold">{fighter.reach}</span>
                    </div>
                    <div class="bg-slate-800 p-3 rounded-lg">
                        <span class="block text-slate-400 text-xs uppercase">Guardia</span>
                        <span class="font-bold">{fighter.stance}</span>
                    </div>
                </div>
            </div>
        </div>
    ) : (
        <div class="p-8 text-center text-red-500">No se pudo cargar el perfil del luchador.</div>
    )}

    {/* Detailed Fight Record Section */}
    {records && (
        <div class="record-stats bg-gradient-to-r from-slate-800 to-slate-900 text-white p-8">
            <h3 class="text-2xl font-bold mb-6 text-center">Récord Profesional</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
                {/* Total Record */}
                <div class="bg-slate-700/50 p-6 rounded-lg text-center border-2 border-green-500">
                    <div class="text-5xl font-black mb-2 text-green-400">
                        {records.total.win}-{records.total.loss}
                    </div>
                    <div class="text-sm text-slate-300 uppercase tracking-wider">Récord Total</div>
                </div>

                {/* Wins Breakdown */}
                <div class="bg-slate-700/50 p-6 rounded-lg">
                    <div class="text-xl font-bold mb-4 text-green-400 text-center">Victorias ({records.total.win})</div>
                    <div class="space-y-2 text-sm">
                        <div class="flex justify-between">
                            <span class="text-slate-300">Por KO/TKO:</span>
                            <span class="font-bold text-white">{records.ko.win}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-300">Por Decisión:</span>
                            <span class="font-bold text-white">{records.dec.win}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-300">Por Sumisión:</span>
                            <span class="font-bold text-white">{records.sub.win}</span>
                        </div>
                    </div>
                </div>

                {/* Losses Breakdown */}
                <div class="bg-slate-700/50 p-6 rounded-lg">
                    <div class="text-xl font-bold mb-4 text-red-400 text-center">Derrotas ({records.total.loss})</div>
                    <div class="space-y-2 text-sm">
                        <div class="flex justify-between">
                            <span class="text-slate-300">Por KO/TKO:</span>
                            <span class="font-bold text-white">{records.ko.loss}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-300">Por Decisión:</span>
                            <span class="font-bold text-white">{records.dec.loss}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-300">Por Sumisión:</span>
                            <span class="font-bold text-white">{records.sub.loss}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    )}


    <div class="timeline-container p-8 bg-gray-50">
        <h3 class="text-2xl font-bold mb-8 text-center text-slate-800">Línea de Tiempo Profesional</h3>
        <div class="relative border-l-4 border-blue-200 ml-4 md:ml-auto md:mr-auto md:w-2/3 space-y-8">
            {allEvents.map((event) => (
                <div class="mb-8 ml-6 relative">
                    <div class={`absolute -left-10 w-6 h-6 rounded-full border-4 border-white shadow-sm ${
                        event.type === 'championship' ? 'bg-yellow-500' :
                        event.type === 'suspension' ? 'bg-red-500' :
                        event.type === 'return' ? 'bg-green-500' :
                        'bg-blue-500'
                    }`}></div>
                    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                        <span class="text-sm font-bold text-blue-600 mb-1 block">{event.year}</span>
                        <h4 class="text-lg font-bold text-gray-900 mb-2">{event.title}</h4>
                        <p class="text-gray-600">{event.description}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</div>
