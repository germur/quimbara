---
import PageLayout from '@/layouts/BaseLayout.astro'
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import { weightClasses } from '@/data/weightClasses'

export const prerender = true

const meta = {
  title: 'Rankings UFC Oficiales | Libra por Libra y Divisiones | Quimbara',
  description: 'Rankings oficiales de UFC actualizados. Top 15 libra por libra (P4P) y clasificaciones completas de todas las divisiones de peso.'
}

const p4pMen = [
  { rank: 1, name: "Islam Makhachev", record: "26-1-0", trend: "stable" },
  { rank: 2, name: "Jon Jones", record: "28-1-0", trend: "stable" },
  { rank: 3, name: "Alex Pereira", record: "12-2-0", trend: "up" },
  { rank: 4, name: "Ilia Topuria", record: "16-0-0", trend: "up" },
  { rank: 5, name: "Belal Muhammad", record: "24-3-0", trend: "up" },
  { rank: 6, name: "Dricus Du Plessis", record: "22-2-0", trend: "stable" },
  { rank: 7, name: "Merab Dvalishvili", record: "18-4-0", trend: "up" },
  { rank: 8, name: "Tom Aspinall", record: "15-3-0", trend: "stable" },
  { rank: 9, name: "Leon Edwards", record: "22-4-0", trend: "down" },
  { rank: 10, name: "Alexander Volkanovski", record: "26-4-0", trend: "down" },
]
---

<PageLayout {meta}>
  <Breadcrumbs
    path={[
      { title: 'Inicio', link: '/' },
      { title: 'Rankings', link: '/rankings/' }
    ]}
  />

  <section class="py-12">
    <div class="text-center mb-16">
      <h1 class="text-5xl md:text-7xl font-heading font-bold text-[#FF9E00] mb-4">
        RANKINGS <span class="text-red-600">OFICIALES</span>
      </h1>
      <p class="text-xl text-[#9D4EDD] 400">Actualizado: Noviembre 2024</p>
    </div>

    <div class="grid lg:grid-cols-3 gap-12">
      <!-- P4P List -->
      <div class="lg:col-span-1">
        <div class="glass-panel rounded-2xl overflow-hidden border-t-4 border-t-yellow-500">
          <div class="p-6 bg-white/5 border-b border-white/10">
            <h2 class="text-2xl font-heading font-bold text-[#FF9E00] flex items-center gap-3">
              <span class="text-yellow-500">üèÜ</span> Libra Por Libra
            </h2>
            <p class="text-sm text-[#9D4EDD] 400 mt-1">Men's Pound-for-Pound Top 15</p>
          </div>
          
          <div class="divide-y divide-white/5">
            {p4pMen.map((fighter) => (
              <div class="p-4 flex items-center gap-4 hover:bg-white/5 transition-colors group">
                <span class={`font-heading font-bold text-xl w-8 text-center ${fighter.rank <= 3 ? 'text-yellow-500' : 'text-[#9D4EDD] 500'}`}>
                  {fighter.rank}
                </span>
                <div class="flex-1">
                  <h3 class="font-bold text-[#FF9E00] group-hover:text-red-500 transition-colors">{fighter.name}</h3>
                  <p class="text-xs text-[#9D4EDD] 500 font-mono">{fighter.record}</p>
                </div>
                <div class="text-xs text-[#9D4EDD] 600">
                  {fighter.trend === 'up' && <span class="text-green-500">‚ñ≤</span>}
                  {fighter.trend === 'down' && <span class="text-red-500">‚ñº</span>}
                  {fighter.trend === 'stable' && <span>-</span>}
                </div>
              </div>
            ))}
             <div class="p-4 text-center">
                <a href="#" class="text-xs text-[#9D4EDD] 500 hover:text-[#FF9E00] transition-colors">Ver Top 15 Completo ‚Üí</a>
             </div>
          </div>
        </div>
      </div>

      <!-- Division Links -->
      <div class="lg:col-span-2">
        <h2 class="text-2xl font-heading font-bold text-[#FF9E00] mb-8 border-l-4 border-red-600 pl-4">
          Rankings por Divisi√≥n
        </h2>
        
        <div class="grid md:grid-cols-2 gap-6">
          {weightClasses.map(wc => (
            <a href={`/fighters/${wc.slug}/`} class="glass-panel p-6 rounded-xl hover:border-red-600/50 transition-all group relative overflow-hidden">
               <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                  <svg class="w-16 h-16 text-[#FF9E00]" fill="currentColor" viewBox="0 0 24 24"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 2h2v2h-2V5zm0 4h2v2h-2V9zm0 4h2v2h-2v-2zm-4-8h2v2H8V5zm0 4h2v2H8V9zm0 4h2v2H8v-2zM5 17h14v2H5v-2zm2-12h10v10H7V5z"/></svg>
               </div>
               
               <h3 class="text-xl font-bold text-[#FF9E00] mb-1 group-hover:text-red-500 transition-colors">{wc.nameEs}</h3>
               <p class="text-sm text-[#9D4EDD] 400 mb-4">{wc.limit}</p>
               
               <div class="flex items-center gap-3 mt-auto">
                 <div class="w-10 h-10 rounded-full bg-gray-800 border border-white/10 overflow-hidden">
                    <!-- Champion Image Placeholder -->
                    <div class="w-full h-full bg-gradient-to-br from-gray-700 to-gray-900"></div>
                 </div>
                 <div>
                   <span class="text-[10px] text-[#9D4EDD] 500 uppercase font-bold block">Campe√≥n</span>
                   <span class="text-sm font-bold text-[#FF9E00]">Ver Ranking</span>
                 </div>
               </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
</PageLayout>
