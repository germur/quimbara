---
import { getCollection } from 'astro:content'
import fightersData from '@/data/fighters.json'

import PageLayout from '@/layouts/BaseLayout.astro'
import NextEventWidget from '@/components/widgets/NextEventWidget.astro'
import config from '@/site-config'

export const prerender = true

// Featured fighters - Top fighters from API (NO champion claims)
const featuredFighters = fightersData.slice(0, 6).map((fighter) => ({
  name: fighter.name,
  title: fighter.division,
  description: fighter.description || 'Peleador destacado de UFC',
  href: `/peleadores/${fighter.slug}`,
  image: `https://media.api-sports.io/mma/fighters/${fighter.id}.png`
}))

const MAX_POSTS = 6
const allPosts = await getCollection('blog')
const allPostsByDate = allPosts
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, MAX_POSTS)
---

<PageLayout meta={{ title: 'Inicio' }}>
  <!-- Hero Section - FEATURED ARTICLE -->
  <section
    class='relative min-h-[70vh] flex items-center justify-center overflow-hidden rounded-3xl mb-16 bg-white border border-border shadow-sm'
  >
    {
      allPostsByDate[0] && (
        <>
          {/* Background Image */}
          <div class='absolute inset-0 z-0'>
            <img
              src='/images/hero-home.png'
              alt='Campeones legendarios de UFC: Georges St-Pierre, Anderson Silva, Demetrious Johnson e Islam Makhachev en el octágono - Noticias de MMA Quimbara'
              class='w-full h-full object-cover'
            />
            <div class='absolute inset-0 bg-gradient-to-r from-quimbara-purple/95 via-quimbara-purple/85 to-quimbara-purple/70' />
          </div>

          {/* Content */}
          <div class='relative z-10 text-left px-8 md:px-16 max-w-7xl mx-auto w-full'>
            <div class='max-w-3xl'>
              <div class='inline-block bg-quimbara-magenta text-white px-4 py-2 rounded-full font-bold text-xs uppercase tracking-wide mb-6 shadow-lg'>
                {allPostsByDate[0].data.tags?.[0] || 'Destacado'}
              </div>
              <h1 class='text-5xl md:text-7xl font-heading font-bold text-white mb-6 leading-tight'>
                {allPostsByDate[0].data.title}
              </h1>
              <p class='text-xl md:text-2xl text-white/90 mb-10 leading-relaxed'>
                {allPostsByDate[0].data.description}
              </p>
              <div class='flex flex-col sm:flex-row gap-4'>
                <a
                  href={`/blog/${allPostsByDate[0].id}/`}
                  class='px-10 py-4 bg-quimbara-magenta text-white font-bold text-lg rounded-xl hover:bg-quimbara-magenta/90 transition-all transform hover:scale-105 shadow-lg shadow-quimbara-magenta/20 inline-block text-center'
                >
                  Leer Artículo Completo
                </a>
                <a
                  href='/blog'
                  class='px-10 py-4 bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white font-bold text-lg rounded-xl hover:bg-white/20 transition-all inline-block text-center'
                >
                  Ver Más Noticias
                </a>
              </div>
            </div>
          </div>
        </>
      )
    }
  </section>

  <!-- Bento Grid Hub Section - CLEAN STYLE -->
  <section class='mb-20'>
    <div class='flex items-center gap-4 mb-8'>
      <h2 class='text-4xl font-heading font-bold text-quimbara-purple'>
        <span class='text-quimbara-magenta'>///</span> HUB DE CONTENIDO
      </h2>
      <div class='h-px bg-quimbara-magenta/20 flex-1'></div>
    </div>

    <div class='grid grid-cols-1 md:grid-cols-4 grid-rows-2 gap-6 h-auto md:h-[500px]'>
      <!-- 1. Main Feature (Large Block) -->
      {
        allPostsByDate[0] && (
          <a
            href={`/blog/${allPostsByDate[0].id}/`}
            class='col-span-1 md:col-span-2 row-span-2 group relative rounded-3xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500'
          >
            <img
              src={
                typeof allPostsByDate[0].data.heroImage?.src === 'string'
                  ? allPostsByDate[0].data.heroImage?.src
                  : allPostsByDate[0].data.heroImage?.src?.src || '/images/social-card.png'
              }
              alt={allPostsByDate[0].data.title}
              class='absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105'
            />
            <div class='absolute inset-0 bg-gradient-to-t from-quimbara-purple via-quimbara-purple/40 to-transparent opacity-90' />

            <div class='absolute bottom-0 left-0 w-full p-8'>
              <span class='bg-quimbara-magenta text-white text-xs font-bold px-3 py-1 rounded-full mb-4 inline-block uppercase tracking-wider shadow-md'>
                {allPostsByDate[0].data.tags?.[0] || 'Destacado'}
              </span>
              <h3 class='text-3xl md:text-4xl font-heading font-bold text-white mb-3 leading-tight group-hover:text-quimbara-pink transition-colors'>
                {allPostsByDate[0].data.title}
              </h3>
              <p class='text-white/90 line-clamp-2 text-lg font-medium'>
                {allPostsByDate[0].data.description}
              </p>
            </div>
          </a>
        )
      }

      <!-- 2. Secondary News (Top Right) -->
      {
        allPostsByDate[1] && (
          <a
            href={`/blog/${allPostsByDate[1].id}/`}
            class='col-span-1 bg-white rounded-3xl p-6 border border-border hover:border-quimbara-magenta hover:shadow-md transition-all flex flex-col justify-between group'
          >
            <div class='flex justify-between items-start'>
              <span class='text-quimbara-magenta text-xs font-bold uppercase tracking-wider bg-quimbara-magenta/10 px-2 py-1 rounded'>
                NOTICIA RÁPIDA
              </span>
              <span class='text-quimbara-purple/50 text-xs font-medium'>
                {allPostsByDate[1].data.publishDate.toLocaleDateString()}
              </span>
            </div>
            <div>
              <h4 class='font-bold text-quimbara-purple text-lg leading-tight group-hover:text-quimbara-magenta transition-colors mt-4'>
                {allPostsByDate[1].data.title}
              </h4>
            </div>
          </a>
        )
      }

      <!-- 3. Event Widget (Action Oriented) -->
      <NextEventWidget />

      <!-- 4. Technique / Evergreen (Bottom Wide) -->
      <a
        href='/tecnicas-entrenamientos'
        class='col-span-1 md:col-span-2 bg-quimbara-pink/20 rounded-3xl p-6 border border-quimbara-pink/30 hover:bg-quimbara-pink/30 transition-all flex items-center justify-between group relative overflow-hidden'
      >
        <div class='relative z-10'>
          <span
            class='text-quimbara-purple bg-white px-3 py-1 rounded-full text-xs font-bold uppercase tracking-widest mb-2 inline-block shadow-sm'
          >
            Academia Quimbara
          </span>
          <h3
            class='text-2xl font-bold text-quimbara-purple group-hover:text-quimbara-magenta transition-colors'
          >
            Guías de Entrenamiento & Técnica
          </h3>
          <p class='text-quimbara-purple/70 text-sm mt-1 max-w-md font-medium'>
            Mejora tu juego con análisis técnicos, rutinas de fuerza y tutoriales de BJJ/Striking.
          </p>
        </div>
        <div
          class='h-16 w-16 rounded-full bg-white flex items-center justify-center shadow-sm group-hover:scale-110 transition-transform'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='32'
            height='32'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            class='text-quimbara-magenta'
            stroke-width='2'
            stroke-linecap='round'
            stroke-linejoin='round'
            ><path d='M6.5 6.5h11'></path><path d='M6.5 17.5h11'></path><path
              d='M6 20v-2a6 6 0 1 1 12 0v2'></path><path d='M9 9v6'></path><path d='M15 9v6'
            ></path></svg
          >
        </div>
      </a>
    </div>
  </section>

  <!-- Featured Fighters - CLEAN CARDS -->
  <section class='mb-20'>
    <div class='flex items-center justify-between mb-10'>
      <h2 class='text-4xl font-heading font-bold text-quimbara-purple'>
        <span class='text-quimbara-magenta'>///</span> PELEADORES TENDENCIA
      </h2>
      <a
        href='/peleadores'
        class='text-sm text-quimbara-magenta hover:text-quimbara-purple uppercase tracking-widest font-bold transition-colors'
      >
        Ver Todos →
      </a>
    </div>

    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6'>
      {
        featuredFighters.map((fighter) => (
          <a
            href={fighter.href}
            class='group bg-white border border-border rounded-3xl overflow-hidden hover:border-quimbara-magenta hover:shadow-xl transition-all duration-300'
          >
            {/* Image Section */}
            <div class='relative h-64 bg-quimbara-cream overflow-hidden'>
              <img
                src={fighter.image}
                alt={fighter.name}
                class='w-full h-full object-cover object-top transition-transform duration-500 group-hover:scale-110'
                loading='lazy'
              />
            </div>

            {/* Content Section */}
            <div class='p-6 space-y-3'>
              <div class='text-quimbara-purple/60 text-xs uppercase font-bold tracking-wider'>
                {fighter.title}
              </div>
              <h3 class='text-2xl font-heading font-bold text-quimbara-purple group-hover:text-quimbara-magenta transition-colors leading-tight'>
                {fighter.name}
              </h3>
              <p class='text-quimbara-purple/70 text-sm line-clamp-2'>{fighter.description}</p>
            </div>
          </a>
        ))
      }
    </div>
  </section>

  <!-- Latest News Grid (Remaining) -->
  <section class='grid grid-cols-1 lg:grid-cols-3 gap-8 mb-20'>
    <!-- News Column -->
    <div class='lg:col-span-2 space-y-8'>
      <div class='flex items-center gap-4 mb-6'>
        <h2 class='text-3xl font-heading font-bold text-quimbara-purple'>MÁS NOTICIAS</h2>
        <div class='h-px bg-quimbara-magenta/20 flex-1'></div>
      </div>

      <div class='grid gap-6'>
        {
          allPostsByDate.slice(2).map((post) => (
            <article class='bg-white border border-border rounded-3xl overflow-hidden group hover:border-quimbara-magenta hover:shadow-md transition-all'>
              <a href={`/blog/${post.id}/`} class='flex flex-col md:flex-row'>
                {/* Image */}
                <div class='md:w-80 h-56 md:h-auto bg-quimbara-cream overflow-hidden shrink-0'>
                  <img
                    src={
                      typeof post.data.heroImage?.src === 'string'
                        ? post.data.heroImage?.src
                        : post.data.heroImage?.src?.src || '/images/social-card.png'
                    }
                    alt={post.data.title}
                    class='w-full h-full object-cover transition-transform duration-500 group-hover:scale-110'
                    loading='lazy'
                  />
                </div>

                {/* Content */}
                <div class='flex-1 p-6'>
                  <div class='flex items-center gap-3 mb-3'>
                    <span class='text-xs font-bold text-quimbara-magenta uppercase tracking-wider bg-quimbara-magenta/10 px-3 py-1 rounded-full'>
                      {post.data.tags?.[0] || 'Noticia'}
                    </span>
                    <span class='text-xs text-quimbara-purple/50'>
                      • {post.data.publishDate.toLocaleDateString()}
                    </span>
                  </div>
                  <h3 class='text-2xl font-bold text-quimbara-purple mb-3 group-hover:text-quimbara-magenta transition-colors'>
                    {post.data.title}
                  </h3>
                  <p class='text-quimbara-purple/70 line-clamp-2'>{post.data.description}</p>
                </div>
              </a>
            </article>
          ))
        }
      </div>
    </div>

    <!-- Sidebar / Categories -->
    <aside class='space-y-8'>
      <div class='bg-white border border-border p-8 rounded-3xl shadow-sm'>
        <h3 class='font-heading text-xl font-bold text-quimbara-purple mb-6'>CATEGORÍAS</h3>
        <ul class='space-y-3'>
          <li>
            <a
              href='/peleadores'
              class='flex items-center justify-between p-3 rounded-xl hover:bg-quimbara-cream transition-colors group'
            >
              <span class='text-quimbara-purple font-medium group-hover:text-quimbara-magenta'
                >Peleadores</span
              >
              <span
                class='text-xs bg-quimbara-cream text-quimbara-purple px-2 py-1 rounded group-hover:bg-quimbara-magenta/10 group-hover:text-quimbara-magenta'
                >Directory</span
              >
            </a>
          </li>
          <li>
            <a
              href='/noticias'
              class='flex items-center justify-between p-3 rounded-xl hover:bg-quimbara-cream transition-colors group'
            >
              <span class='text-quimbara-purple font-medium group-hover:text-quimbara-magenta'
                >Noticias</span
              >
              <span
                class='text-xs bg-quimbara-cream text-quimbara-purple px-2 py-1 rounded group-hover:bg-quimbara-magenta/10 group-hover:text-quimbara-magenta'
                >News</span
              >
            </a>
          </li>
          <li>
            <a
              href='/analisis'
              class='flex items-center justify-between p-3 rounded-xl hover:bg-quimbara-cream transition-colors group'
            >
              <span class='text-quimbara-purple font-medium group-hover:text-quimbara-magenta'
                >Análisis</span
              >
              <span
                class='text-xs bg-quimbara-cream text-quimbara-purple px-2 py-1 rounded group-hover:bg-quimbara-magenta/10 group-hover:text-quimbara-magenta'
                >Deep Dive</span
              >
            </a>
          </li>
        </ul>
      </div>

      <!-- Newsletter or Ad -->
      <div
        class='bg-gradient-to-br from-quimbara-magenta to-quimbara-pink p-8 rounded-3xl text-center relative overflow-hidden shadow-lg'
      >
        <div class='relative z-10'>
          <h3 class='font-heading text-2xl font-bold text-white mb-3'>QUIMBARA VIP</h3>
          <p class='text-white/90 text-sm mb-6 font-medium'>
            Recibe análisis exclusivos antes de cada evento numerado.
          </p>
          <button
            class='w-full bg-white text-quimbara-magenta font-bold py-3 rounded-xl hover:bg-quimbara-cream transition-all shadow-md'
          >
            Suscribirse Gratis
          </button>
        </div>
      </div>
    </aside>
  </section>
</PageLayout>
