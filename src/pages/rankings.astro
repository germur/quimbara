---
import PageLayout from '@/layouts/BaseLayout.astro'
import { weightClasses } from '@/data/weightClasses'
import championsData from '@/data/champions-generated.json'

// Buscar campeones de cada división (Dinámico)
const champions = weightClasses.map(wc => {
  // @ts-ignore
  const champion = championsData.champions[wc.nameEn]
  return {
    division: wc,
    champion: champion ? {
      ...champion,
      record: `${champion.record.win}-${champion.record.loss}-${champion.record.draw}`
    } : null
  }
}).filter(c => c.champion)

// P4P ranking (Dinámico desde API)
const p4pRanking = championsData.p4p.map((f: any, index: number) => ({
  rank: index + 1,
  id: f.id,
  name: f.name,
  division: f.weight || 'UFC Fighter', // API might return weight class string
  record: `${f.record.win}-${f.record.loss}-${f.record.draw}`
}))

const meta = {
  title: 'Rankings UFC Oficiales - Pound for Pound y Por División | Quimbara',
  description: 'Rankings oficiales de UFC actualizados. Descubre el Pound-for-Pound, campeones de cada división y el Top 15 de todas las categorías de peso.'
}

// Helper para imagen
const getFighterImg = (id: number) => `https://media.api-sports.io/mma/fighters/${id}.png`
---

<PageLayout {meta}>
  <!-- Hero Section -->
  <section class="py-12 mb-12 text-center">
    <div class="inline-block bg-quimbara-magenta/10 text-quimbara-magenta px-4 py-1 rounded-full text-sm font-bold uppercase tracking-wider mb-4 border border-quimbara-magenta/20">
      Actualizado Semanalmente
    </div>
    <h1 class="text-4xl md:text-6xl font-heading font-bold mb-4 text-quimbara-purple">
      RANKINGS <span class="text-quimbara-magenta">OFICIALES UFC</span>
    </h1>
    <p class="text-lg text-quimbara-purple/70 max-w-3xl mx-auto leading-relaxed">
      Rankings actualizados de todas las divisiones, incluyendo el codiciado Pound-for-Pound.
    </p>
  </section>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
    <!-- Pound for Pound -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-3xl overflow-hidden shadow-sm border border-border mb-12">
        <div class="p-6 border-b border-border bg-gradient-to-r from-quimbara-magenta/5 to-quimbara-pink/5">
          <div class="flex items-center gap-3 mb-2">
            <div class="w-2 h-8 bg-quimbara-magenta rounded-full"></div>
            <h2 class="font-heading font-bold text-quimbara-purple text-3xl">Pound-for-Pound</h2>
          </div>
          <p class="text-quimbara-purple/60 text-sm">Los mejores peleadores sin distinción de peso</p>
        </div>
        <div class="p-6 space-y-4">
          {p4pRanking.map((fighter) => (
            <div class="flex items-center gap-4 p-4 rounded-2xl hover:bg-quimbara-cream transition-all border border-transparent hover:border-quimbara-magenta/20 group">
              <div class="flex items-center gap-4 flex-1">
                <span class="text-3xl font-heading font-bold text-quimbara-magenta w-12 text-center group-hover:scale-110 transition-transform">
                  {fighter.rank}
                </span>
                <img 
                  src={getFighterImg(fighter.id)} 
                  alt={fighter.name}
                  class="w-16 h-16 rounded-full object-cover bg-quimbara-cream border-2 border-border group-hover:border-quimbara-magenta transition-colors"
                  loading="lazy"
                  onerror="this.src='/images/fighter-placeholder.png'"
                />
                <div class="flex-1">
                  <h3 class="font-bold text-quimbara-purple text-lg group-hover:text-quimbara-magenta transition-colors">
                    {fighter.name}
                  </h3>
                  <p class="text-quimbara-purple/60 text-sm">
                    Campeón {fighter.division} • {fighter.record}
                  </p>
                </div>
              </div>
              <a 
                href={`/fighters/${fighter.division.toLowerCase().replace(' ', '-')}`}
                class="text-xs text-quimbara-magenta font-bold uppercase hover:text-[#D63384] transition-colors"
              >
                Ver División →
              </a>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Sidebar - Quick Access -->
    <aside class="space-y-6">
      <div class="bg-gradient-to-br from-quimbara-magenta to-quimbara-pink p-8 rounded-3xl text-white shadow-lg">
        <h3 class="font-heading text-2xl font-bold mb-4">¿Qué es P4P?</h3>
        <p class="text-white/90 text-sm leading-relaxed">
          El ranking <strong>Pound-for-Pound</strong> imagina qué pasaría si todos los peleadores pesaran lo mismo. 
          Es el reconocimiento definitivo de habilidad pura, sin ventajas físicas.
        </p>
      </div>

      <div class="bg-white p-6 rounded-3xl border border-border shadow-sm">
        <h3 class="font-heading text-xl mb-4 text-quimbara-purple font-bold">Acceso Rápido</h3>
        <ul class="space-y-2">
          <li>
            <a href="#champions" class="flex items-center justify-between p-3 rounded-xl hover:bg-quimbara-cream transition-colors group">
              <span class="text-quimbara-purple font-medium group-hover:text-quimbara-magenta">Ver Campeones</span>
              <span class="text-quimbara-magenta">↓</span>
            </a>
          </li>
          <li>
            <a href="/fighters" class="flex items-center justify-between p-3 rounded-xl hover:bg-quimbara-cream transition-colors group">
              <span class="text-quimbara-purple font-medium group-hover:text-quimbara-magenta">Directorio de Peleadores</span>
              <span class="text-quimbara-magenta">→</span>
            </a>
          </li>
        </ul>
      </div>
    </aside>
  </div>

  <!-- Campeones por División -->
  <section id="champions" class="py-12 border-t border-border">
    <div class="flex items-center gap-4 mb-8">
      <div class="h-10 w-2 bg-quimbara-magenta rounded-full"></div>
      <h2 class="text-3xl font-heading font-bold text-quimbara-purple">
        Campeones por División
      </h2>
    </div>
    <p class="text-quimbara-purple/60 mb-8 text-lg">
      Haz clic en cualquier división para ver el ranking completo
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {champions.map(({ division, champion }) => (
        <a
          href={`/fighters/${division.slug}`}
          class="group block bg-white rounded-3xl overflow-hidden hover:shadow-xl transition-all duration-300 border border-border hover:border-quimbara-magenta"
        >
          <div class="aspect-[3/4] relative overflow-hidden bg-gradient-to-b from-quimbara-cream to-white">
            <img
              src={getFighterImg(champion.id)}
              alt={champion.name}
              class="w-full h-full object-cover object-top group-hover:scale-110 transition-transform duration-500"
              loading="lazy"
              onerror="this.src='/images/fighter-placeholder.png'"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-quimbara-purple via-quimbara-purple/30 to-transparent" />
            
            <!-- Badge -->
            <div class="absolute top-4 left-4 bg-quimbara-magenta text-black px-3 py-1 rounded-full text-xs font-bold uppercase border-2 border-white shadow-lg">
              Campeón
            </div>

            <!-- Info -->
            <div class="absolute bottom-0 left-0 w-full p-6">
              <h3 class="font-heading text-white text-sm uppercase tracking-wider mb-1 opacity-80">
                {division.nameEs}
              </h3>
              <h4 class="font-bold text-white text-xl leading-tight mb-2 group-hover:text-quimbara-pink transition-colors">
                {champion.name}
              </h4>
              <p class="text-white/70 text-xs font-mono">
                {champion.record || 'Récord no disponible'}
              </p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>
</PageLayout>
